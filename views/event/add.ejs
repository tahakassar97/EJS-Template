<%- include('../partiales/header') -%>
<%- include('../partiales/navbar') -%>

<h1 class="display-5" style="margin-left: 35%; margin-top: 10px;">Add New Event</h1>
<%- include('../partiales/errorMessages') -%>
<div>
    <div class="col-md-9 offset-md-5 mt-2 ml-5">
        <form class="form" method="POST" action="/index/create/one">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" class="form-control">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="4" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" name="date" id="date" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>
<%- include('../partiales/footer') -%>